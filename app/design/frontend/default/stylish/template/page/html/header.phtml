var j = jQuery.noConflict();
j(document).ready(function() {	
	j("#cl").click(function (){
		var id = '#dialog1';	
	
		//Get the screen height and width
		var mask1Height = j(document).height();
		var mask1Width = j(window).width();
	
		//Set heigth and width to mask1 to fill up the whole screen
		j('#mask1').css({'width':mask1Width,'height':mask1Height});
		
		//transition effect		
		j('#mask1').fadeIn(50);	
		j('#mask1').fadeTo("fast",0.8);	
		document.getElementById("dialog1").style.display="block";	
		//Get the window height and width
		var winH = j(window).height();
		var winW = j(window).width();
              
		//Set the popup window to center
		j(id).css('top',  winH/2-j(id).height()/2);
		j(id).css('left', winW/2-j(id).width()/2);
		
		//transition effect
		j(id).fadeIn(1000); 	
		
		});
		
	//if close button is clicked
	j('.window .close').click(function (e) {
		//Cancel the link behavior
		e.preventDefault();
		
		j('#mask1').hide();
		j('.window').hide();
	});	
	
	//if mask1 is clicked
	j('#mask1').click(function () {
		j(this).hide();
		j('.window').hide();
	});		
	
});
</script> 
