 <!-- creditmemo order view -->
	<adminhtml_sales_order_creditmemo_view>
		<reference name="creditmemo_items">
			<action method="addColumnRender">
				<column>name</column>
				<block>airhotels/adminhtml_sales_items_column_name</block>
				<template>airhotels/sales/items/column/name.phtml</template>
				<type>property</type>
			</action>
		</reference>
	</adminhtml_sales_order_creditmemo_view>

</layout>